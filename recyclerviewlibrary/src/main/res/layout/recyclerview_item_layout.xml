<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recycler_item_icon"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/abc_vector_test"
        android:layout_width="@dimen/recyclerview_item_icon_width"
        android:layout_height="@dimen/recyclerview_item_icon_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@id/recycler_item_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_item_title"
            tools:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recycler_item_summary"
            tools:text="summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/recycler_item_arrow"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>